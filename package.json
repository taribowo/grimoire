{
  "name": "grimoire",
  "version": "2.0.0",
  "description": "Manga Reader for Windows using Electron",
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@charlietango/use-native-lazy-loading": "^1.7.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "bootstrap": "^4.4.1",
    "decimal.js": "^10.2.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-serve": "^0.4.1",
    "image-size": "^0.8.3",
    "jquery": "^3.4.1",
    "mousetrap": "^1.6.5",
    "node-sass": "^4.13.1",
    "popper.js": "^1.16.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intersection-observer": "^8.26.1",
    "react-redux": "^7.2.0",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predev": "rimraf build && npm run build",
    "dev": "electron ./main.js",
    "electron": "electron .",
    "predist": "rimraf build && rimraf dist && npm run build",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "io.github.taribowo.grimoire",
    "productName": "Grimoire",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./public/electron.js"
    ],
    "nsis": {
      "artifactName": "Grimoire.setup.${version}.${ext}",
      "uninstallDisplayName": "Grimoire"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taribowo/grimoire.git"
  },
  "keywords": [
    "ElectronJS",
    "Manga",
    "Reader"
  ],
  "author": "Trilaksono Aribowo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/taribowo/grimoire/issues"
  }
}
