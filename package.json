{
  "name": "manga-reader",
  "version": "1.0.0",
  "description": "Manga Reader for Windows using Electron",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "react-start": "webpack-dev-server --mode development --hot",
    "react-build": "webpack --mode production",
    "preelectron-start": "webpack --mode production",
    "electron-start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "io.github.taribowo.grimoire",
    "productName": "Grimoire",
    "files": [
      "./build/*",
      "./main.js"
    ],
    "nsis": {
      "artifactName": "Grimoire.setup.${version}.${ext}",
      "uninstallDisplayName": "Grimoire"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taribowo/grimoire.git"
  },
  "keywords": [
    "ElectronJS",
    "Manga",
    "Reader"
  ],
  "author": "Trilaksono Aribowo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/taribowo/grimoire/issues"
  },
  "homepage": "https://github.com/taribowo/grimoire#readme",
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "brotli-webpack-plugin": "^1.1.0",
    "css-loader": "^3.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "bootstrap": "^4.3.1",
    "decimal.js": "^10.2.0",
    "image-size": "^0.7.4",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-in-viewport": "0.0.38",
    "react-lazyload": "^2.6.2",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  }
}
